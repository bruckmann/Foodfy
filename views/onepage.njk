{% extends "templates/layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/onepage.css">
{% endblock styles %}

{% block title %}
    <title>{{recips.title}}</title>
{% endblock title %}


{% block content %}

    <div class="header-img">
        <img src="{{item.image}}" alt="{{item.title}}">
    </div>

    <div class="title">
        <h1>{{item.title}}</h1>
        <p>Por {{item.author}}</p>
    </div>

    <div class="ingredients">
        <div class="top">
            <h2>Ingredientes</h2>
            <a id="ingredientsHide">Esconder</a>
        </div>
        <div class="ingr" id="ingredients">
            {% for ingredient in item.ingredients %}
            <ul>
                <li>{{ingredient}}</li>
            </ul>
            {% endfor %}
        </div>
    </div>

    <div class="makemode">
        <div class="top">
            <h2>Modo de preparo</h2>
            <a id="makemodeHide">Esconder</a>
        </div>
        <p id="makemode"class="">{{item.preparation}}</p>
    </div>

    
    <div class="makemodeInfo">
        <div class="top">
            <h2>Informações adicionais</h2>
            <a id="makemodeInfoHide">Esconder</a>
        </div>
        <p id="makemodeInfo" class="">{{item.information}}</p>
    </div>

    
{% endblock content %}



{% block scripts %}
    <script src="/scripts/collapse.js"></script>
{% endblock scripts %}
